# Apollo AI - Provider Configuration
# Copy this to .env and fill in your keys

# =============================================================================
# FILECOIN STORAGE (Shared Multi-tenant)
# =============================================================================
# Get keys from: https://web3.storage
FILECOIN_API_KEY=your_filecoin_api_key_here
FILECOIN_API_SECRET=your_filecoin_secret_here

# =============================================================================
# THETA GPU TRAINING (Shared Multi-tenant)
# =============================================================================
# Get keys from: https://www.thetaedgecloud.com
THETA_API_KEY=your_theta_api_key_here
THETA_WALLET=your_theta_wallet_address_here

# =============================================================================
# JARVISLABS GPU TRAINING (Shared Multi-tenant)
# =============================================================================
# Get keys from: https://jarvislabs.ai
JARVISLABS_API_KEY=your_jarvislabs_api_key_here

# =============================================================================
# PROVIDER SETTINGS
# =============================================================================
# Allow users to bring their own keys (BYOK)
ALLOW_BYOK=true

# Default mode: shared, byok, or disabled
DEFAULT_PROVIDER_MODE=shared

# Multi-tenant isolation
ISOLATION_PREFIX=colossalcapital
USER_ISOLATION=true
ORG_ISOLATION=true

# Resource limits (shared mode only)
MAX_GPU_HOURS_PER_USER=10
MAX_CONCURRENT_JOBS=2

# =============================================================================
# THETA RAG (Akashic IDE - Codebase Storage)
# =============================================================================
# Use Theta RAG for codebase vector storage (97% cheaper than AWS)
USE_THETA_RAG=true

# Fallback to local Qdrant if Theta fails (development only)
FALLBACK_TO_LOCAL=true

# Local Qdrant URL (for development)
QDRANT_URL=http://localhost:6333

# =============================================================================
# DEEPSEEK CODER (Akashic IDE - Code Completion)
# =============================================================================
# Model size: 1.3b (fast, local), 6.7b (balanced), 33b (best, Theta GPU)
DEEPSEEK_MODEL_SIZE=1.3b

# Use Theta GPU for inference (recommended for 33b model)
USE_THETA_GPU=false

# Device: auto, cpu, cuda, mps
DEEPSEEK_DEVICE=auto

# Theta Model API endpoint (for Theta GPU inference)
THETA_MODEL_API_ENDPOINT=https://api.thetaedgecloud.com/model/v1

# =============================================================================
# NOTES
# =============================================================================
# - Leave keys empty to disable that provider
# - BYOK users provide their own keys via API (not stored here)
# - Shared mode uses these keys with multi-tenant isolation
# - All data is isolated by org_id/user_id in shared mode
# - Theta RAG uses same THETA_API_KEY and THETA_WALLET as GPU training
# - Set USE_THETA_RAG=false for local development with Qdrant
